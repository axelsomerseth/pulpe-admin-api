{
  "include": ["./source/**/*"],
  "exclude": ["**/*.test.js", "**/*.test.ts"],
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */

    "outDir": "./build",
    "target": "ES2016",
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
